<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SerializationViewer.Show">
    <ContentPage.Content>
        <StackLayout>
            <ImageButton Source="arrow.png" HeightRequest="30" WidthRequest="30" Margin="3" HorizontalOptions="Start" Clicked="Close_Clicked"/>
            <ScrollView>
                <Label x:Name="label" LineBreakMode="WordWrap" VerticalOptions="FillAndExpand" HorizontalOptions="Fill" Margin="5"/>                
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
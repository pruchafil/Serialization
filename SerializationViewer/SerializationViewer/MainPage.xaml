<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SerializationViewer.MainPage">

    <StackLayout>
        <ImageButton Source="gear.png" HeightRequest="30" WidthRequest="30" BackgroundColor="White" Margin="3"
                     HorizontalOptions="End" Clicked="ImageButton_Show_Clicked"/>
        <Entry x:Name="entry_input" HorizontalOptions="Fill" HorizontalTextAlignment="Center" Margin="10" TextChanged="Entry_TextChanged"/>

        <ScrollView x:Name="scroll">
            <Label x:Name="label_output">
                <Label.FormattedText>
                    <FormattedString>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </ScrollView>

    </StackLayout>
</ContentPage>
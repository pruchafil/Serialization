<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SerializationViewer.MainPage">

    <StackLayout>
        <Entry x:Name="entry_input" HorizontalOptions="Fill" HorizontalTextAlignment="Center" Margin="10" TextChanged="Entry_TextChanged"/>
        <Editor x:Name="editor_output" IsReadOnly="True" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" Margin="10" FontSize="Micro" />
        <ScrollView x:Name="scroll">
            <Label x:Name="label_output" LineBreakMode="WordWrap" Margin="10" FontSize="Micro"/>
        </ScrollView>
        
    </StackLayout>
</ContentPage>